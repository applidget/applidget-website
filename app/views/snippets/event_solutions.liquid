<div class="container">
  <div class="row">
    <div class="span4 hidden-phone calendar">
      {{ "calendar-icon.png" || theme_image_tag }}
    </div>
    <div class="span8">
      <h1>
      {% editable_short_text "conferences_title", hint: "Conferences Title", priority: 80 %}
        Event Solutions
      {% endeditable_short_text %}
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="span6 info-bloc mobicheckin-bloc img-left">
      <div class="padded">
        <!-- This content is supposed to be loaded from a collection in the end -->
        {{ "mobicheckin-icon.png" || theme_image_tag }}
        <span class="bloc-title">MobiCheckin</span>

        <span class="bloc-section-description">
          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
          quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
          consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
          cillum dolore eu fugiat nulla pariatur.
        </span>

        <span class="read-more">
          <a href="#">Read More</a>
        </span>
        <!-- End Content -->
      </div>
    </div>

    <div class="span6 info-bloc mobinetwork-bloc img-right">
      <div class="padded">
        <!-- This content is supposed to be loaded from a collection in the end -->
        {{ "mobinetwork-icon.png" || theme_image_tag }}
        <span class="bloc-title">MobiNetwork</span>

        <span class="bloc-section-description">
          Ut enim ad minim veniam,
          quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
          consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
          cillum dolore eu fugiat nulla pariatur.
        </span>

        <span class="read-more">
          <a href="#">Read More</a>
        </span>
        <!-- End Content -->
      </div>
    </div>
  </div>

  <div class="row">
    <div class="spacer"></div>
  </div>

  <div class="row">
    <div class="span8">
      <div class="business-card">
        <h3>
          {% editable_short_text "business_card_name", hint: "Business Card Name", priority: 77 %}
            Tristan Verdier
          {% endeditable_short_text %}
          <span class="icon-write"></span>
        </h3>
        {% editable_long_text "business_card_info", hint: "Business Card Info", priority: 76 %}
          <span class="list-info email">Email: tristan.verdier@gmail.com</span><br />
          <span class="list-info phone">Phone: 123 456 789</span><br />
          <span class="list-info company">Society: Applidget</span><br />
          <span class="list-info position">Position: Some</span>
        {% endeditable_long_text %}
      </div>
    </div>
    <div class="span4">
      <span class="info success">
        {% editable_short_text "you_will_attend", hint: "You will attend", priority: 75 %}
          You will attend
        {% endeditable_short_text %}
      </span>
      <span class="info yes">
        {% editable_short_text "attend_yes", hint: "Yes", priority: 74 %}
          Yes
        {% endeditable_short_text %}
      </span>
      <span class="info maybe">
        {% editable_short_text "attend_maybe", hint: "Maybe", priority: 73 %}
          Maybe
        {% endeditable_short_text %}
      </span>
      <span class="info credits">
        {% editable_short_text "powered_text", hint: "Powered by Applidget", priority: 72 %}
          Organized by Someone<br />
          Powered by Applidget
        {% endeditable_short_text %}
      </span>
    </div>
  </div>
</div>