{% extends index %}

{% block 'header' %}

  <div class="header">
    <div class="jumbotron" id="section-why-choose">
      <div class="container">
        {% assign url = 'applidget-logo/blue.png' %}
        {% include 'topmenu' %}
      </div>

      <div class="container">
        {% include 'what_we_do' %}
      </div>
    </div>
  </div>

{% endblock %}

{% block 'main' %}

  <div class="container" id="main-why-choose">
    {% if contents.projects.size > 0 %}

      {% for project in contents.projects %}

        <div class="row">
          <div class="span12">
            <div class="row">
              <div class="span7">
                <div class="bloc-header">
                  <span class="bloc-illustration">{{ project.icon.url | theme_image_tag }}</span>
                  <span class="bloc-title">{{ project.title }}</span><br />
                  <span class="bloc-subtitle">{{ project.subtitle }}</span>
                </div>
                <div class="bloc-description">
                  {{ project.body }}
                </div>
              </div>
              <div class="span5 hidden-phone align-right">
                {{ project.picture.url | theme_image_tag }}
              </div>
            </div>
          </div>
        </div>

      {% endfor %}

    {% else %}

      <h3>No project</h3>

    {% endif %}

  </div>

{% endblock %}